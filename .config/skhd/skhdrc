###skhd config
##Modifying the Layout
#rotate layout along y axis
shift + alt - y : yabai -m space --mirror y-axis

#rotate layout along x axis
shift + alt - r :yabai -m space --mirror y-axis

#toggle window float
shift + alt - t :yabai -m window --toggle float --grid 4:4:1:1:2:2

#focus
alt - j :yabai -m window --focus south 
alt - k :yabai -m window --focus north
alt - h :yabai -m window --focus west 
alt - l :yabai -m window --focus east

#open terminal
cmd - return : open -n -a "Ghostty"
#cmd - return : open -n -a "iterm2"

# move window
#ctrl + alt - h : yabai -m window --warp west
#ctrl + alt - j : yabai -m window --warp south
#ctrl + alt - k : yabai -m window --warp north
#ctrl + alt - l : yabai -m window --warp east
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - l : yabai -m window --swap east
shift + alt - return : yabai -m space --balance

# send window to a space 
#shift + alt - 1 : yabai -m window --space 1
#shift + alt - 2 : yabai -m window --space 2
#shift + alt - 3 : yabai -m window --space 3
#shift + alt - 4 : yabai -m window --space 4

#open finder
#ctrl + alt - f : open -a "finder"

#open spotify
#ctrl + alt - s : open -n -a "spotify"

#open arc
cmd + shift - return : open -n -a "arc"
#cmd + shift - return : open -n -a "zen"

#resize window
fn - h: yabai -m window --resize left:-50:0; \
    yabai -m window --resize right:-50:0
fn - j: yabai -m window --resize bottom:0:50; \
    yabai -m window --resize top:0:50
fn - k: yabai -m window --resize top:0:-50; \
    yabai -m window --resize bottom:0:-50
fn - l: yabai -m window --resize right:50:0; \
    yabai -m window --resize left:50:0


# Make window native fullscreen
ctrl + alt - return : yabai -m window --toggle zoom-fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen

#rotate layout clockwise
shift + alt - p :yabai -m space --rotate 270

#layout 
alt - f : yabai -m space --layout float
alt - g : yabai -m space --layout bsp

# increase window size
fn + ctrl + alt - h : yabai -m window --resize left:-50:0
fn + ctrl + alt - j : yabai -m window --resize bottom:0:50
fn + ctrl + alt - k : yabai -m window --resize top:0:-50
fn + ctrl + alt - l : yabai -m window --resize right:50:0

# decrease window size
ctrl + alt + cmd - l : yabai -m window --resize left:50:0;
ctrl + alt + cmd - k : yabai -m window --resize bottom:0:-50;
ctrl + alt + cmd - j : yabai -m window --resize top:0:50;
ctrl + alt + cmd - h : yabai -m window --resize right:-50:0;


